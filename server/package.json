{
  "name": "in-orbit-server",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch --env-file .env src/http/server.ts",

    "seed": "tsx --env-file .env src/db/seed.ts",

    "test": "dotenv -e .env.test -- vitest run",
    "test:watch": "dotenv -e .env.test -- vitest",

    "pretest": "npm run db:migrate:test",
    "pretest:watch": "npm run db:migrate:test",

    "db:migrate:test": "dotenv -e .env.test -- drizzle-kit migrate",

    "biome:format": "biome format --write ./src",
    "biome:check": "biome check --write ./src",
    "biome:lint": "biome lint --write ./src",

    "shadcn": "pnpm dlx shadcn@latest add",

    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/jwt": "^9.0.4",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.1",
    "@paralleldrive/cuid2": "2.2.2",
    "dayjs": "1.11.13",
    "drizzle-orm": "0.39.3",
    "fastify": "5.2.1",
    "fastify-type-provider-zod": "4.0.2",
    "jose": "^5.9.6",
    "postgres": "3.4.5",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@faker-js/faker": "^9.4.0",
    "@types/node": "22.13.1",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "0.30.4",
    "tsx": "4.19.2",
    "typescript": "5.7.3",
    "vitest": "^3.0.5"
  }
}
